<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="knt3tb.cs4720.uvalgbtq.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/rotunda_orange"

        android:layout_marginBottom="30dp"
        android:layout_above="@+id/mapbutt"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="#394264"
        android:textColor="#ffffff"
        android:text="Bathroom Map"
        android:id="@+id/mapbutt"
        android:drawableTop="@drawable/ic_place_w_48dp"
        android:onClick="openMap"
        android:paddingTop="15dp"
        android:layout_alignTop="@+id/eventbutt"
        android:layout_toStartOf="@+id/eventbutt"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="0dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="#394264"
        android:textColor="#ffffff"
        android:text="Events"
        android:id="@+id/eventbutt"
        android:drawableTop="@drawable/ic_insert_invitation_w_48dp"
        android:onClick="openEvents"
        android:layout_above="@+id/policybutt"
        android:layout_alignStart="@+id/policybutt"
        android:paddingTop="15dp"/>

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="#394264"
        android:textColor="#ffffff"
        android:text="Resources"
        android:drawableTop="@drawable/ic_star_border_w_48dp"
        android:id="@+id/resourcebutt"
        android:onClick="openResources"
        android:layout_alignTop="@+id/eventbutt"
        android:layout_alignEnd="@+id/feedbutt"
        android:layout_toEndOf="@+id/eventbutt"
        android:paddingTop="15dp"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="#394264"
        android:textColor="#ffffff"
        android:text="Businesses"
        android:id="@+id/busibutt"
        android:drawableTop="@drawable/ic_business_w_48dp"
        android:onClick="openBusinesses"
        android:layout_toStartOf="@+id/policybutt"
        android:paddingTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="68dp"
        android:layout_alignTop="@+id/policybutt" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="#394264"
        android:textColor="#ffffff"
        android:text="Know Your Rights"
        android:id="@+id/policybutt"
        android:drawableTop="@drawable/ic_verified_user_w_48dp"
        android:onClick="openPolicies"
        android:paddingTop="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="68dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="#394264"
        android:textColor="#ffffff"
        android:text="Feedback"
        android:id="@+id/feedbutt"
        android:drawableTop="@drawable/ic_border_color_w_48dp"
        android:layout_toEndOf="@+id/policybutt"
        android:onClick="openFeedback"
        android:paddingTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="68dp"
        android:layout_alignTop="@+id/policybutt" />




</RelativeLayout>
